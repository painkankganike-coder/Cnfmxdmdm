-- üßç Character Tab (WalkSpeed + Slider)
--------------------------------------------------------
local Tab_Character = Window:Tab({
    Title = "Character",
    Icon = "user",
})

local SpeedEnabled = false
local DefaultSpeed = 16
local CustomSpeed = 50

Tab_Character:Toggle({
    Title = "Walk Speed",
    Desc = "‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÄ‡∏î‡∏¥‡∏ô",
    Icon = "zap",
    Value = false,
    Callback = function(state)
        SpeedEnabled = state
        local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
        if humanoid then
            if state then
                humanoid.WalkSpeed = CustomSpeed
                print("‚úÖ ‡πÄ‡∏õ‡∏¥‡∏î‡πÇ‡∏´‡∏°‡∏î Speed (" .. CustomSpeed .. ")")
            else
                humanoid.WalkSpeed = DefaultSpeed
                print("‚ùå ‡∏õ‡∏¥‡∏î‡πÇ‡∏´‡∏°‡∏î Speed ‡∏Å‡∏•‡∏±‡∏ö‡πÄ‡∏õ‡πá‡∏ô‡∏õ‡∏Å‡∏ï‡∏¥")
            end
        end
    end
})

Tab_Character:Slider({
    Title = "Speed Value",
    Desc = "‡∏õ‡∏£‡∏±‡∏ö‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏Å‡∏≤‡∏£‡πÄ‡∏î‡∏¥‡∏ô",
    Step = 1,
    Value = {
        Min = 16,
        Max = 35,
        Default = 16,
    },
    Callback = function(value)
        CustomSpeed = value
        if SpeedEnabled then
            local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = value
            end
        end
        print("üéöÔ∏è ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏ñ‡∏π‡∏Å‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡πÄ‡∏õ‡πá‡∏ô:", value)
    end
})

--------------------------------------------------------
-- ü¶ò Super Jump (Fixed inside function)
--------------------------------------------------------

local SuperJump_Enabled = false

-- ‚öôÔ∏è ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î‡∏™‡∏π‡∏á (‡πÅ‡∏Å‡πâ‡∏Ñ‡πà‡∏≤‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢)
local function EnableSuperJump()
	SuperJump_Enabled = true
	local char = game.Players.LocalPlayer.Character
	if char and char:FindFirstChildOfClass("Humanoid") then
		local humanoid = char:FindFirstChildOfClass("Humanoid")
		humanoid.UseJumpPower = true
		humanoid.JumpPower = 90 -- üî• 
		print("‚úÖ ‡πÄ‡∏õ‡∏¥‡∏î Super Jump (JumpPower: 90)")
	end
end

local function DisableSuperJump()
	SuperJump_Enabled = false
	local char = game.Players.LocalPlayer.Character
	if char and char:FindFirstChildOfClass("Humanoid") then
		local humanoid = char:FindFirstChildOfClass("Humanoid")
		humanoid.UseJumpPower = true
		humanoid.JumpPower = 50 -- ‡∏Å‡∏•‡∏±‡∏ö‡∏Ñ‡πà‡∏≤‡∏õ‡∏Å‡∏ï‡∏¥
		print("‚ùå ‡∏õ‡∏¥‡∏î Super Jump (‡∏Å‡∏•‡∏±‡∏ö‡∏õ‡∏Å‡∏ï‡∏¥)")
	end
end

--------------------------------------------------------
-- ‚öôÔ∏è ‡∏õ‡∏∏‡πà‡∏° Toggle ‡πÉ‡∏ô WindUI
--------------------------------------------------------
Tab_Character:Toggle({
	Title = "Super Jump",
	Desc = "‡πÇ‡∏´‡∏°‡∏î‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î‡∏™‡∏π‡∏á",
	Icon = "arrow-up",
	Value = false,
	Callback = function(state)
		if state then
			EnableSuperJump()
		else
			DisableSuperJump()
		end
	end
})

--------------------------------------------------------
-- üîÅ ‡πÉ‡∏´‡πâ‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡∏´‡∏•‡∏±‡∏á‡πÄ‡∏Å‡∏¥‡∏î‡πÉ‡∏´‡∏°‡πà
--------------------------------------------------------
game.Players.LocalPlayer.CharacterAdded:Connect(function()
	task.wait(1)
	if SuperJump_Enabled then
		EnableSuperJump()
	end
end)

--------------------------------------------------------
-- üßç Character Tab (WalkSpeed + Snap)
--------------------------------------------------------
local Tab_Character = Window:Tab({
    Title = "Character",
    Icon = "user",
})

-- üèÉ WalkSpeed
local SpeedEnabled = false
local DefaultSpeed = 16
local CustomSpeed = 50

Tab_Character:Toggle({
    Title = "Walk Speed",
    Desc = "‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÄ‡∏î‡∏¥‡∏ô",
    Icon = "zap",
    Value = false,
    Callback = function(state)
        SpeedEnabled = state
        local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
        if humanoid then
            if state then
                humanoid.WalkSpeed = CustomSpeed
                print("‚úÖ ‡πÄ‡∏õ‡∏¥‡∏î‡πÇ‡∏´‡∏°‡∏î Speed (" .. CustomSpeed .. ")")
            else
                humanoid.WalkSpeed = DefaultSpeed
                print("‚ùå ‡∏õ‡∏¥‡∏î‡πÇ‡∏´‡∏°‡∏î Speed ‡∏Å‡∏•‡∏±‡∏ö‡πÄ‡∏õ‡πá‡∏ô‡∏õ‡∏Å‡∏ï‡∏¥")
            end
        end
    end
})

Tab_Character:Slider({
    Title = "Speed Value",
    Desc = "‡∏õ‡∏£‡∏±‡∏ö‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏Å‡∏≤‡∏£‡πÄ‡∏î‡∏¥‡∏ô",
    Step = 1,
    Value = {
        Min = 16,
        Max = 50,
        Default = CustomSpeed,
    },
    Callback = function(value)
        CustomSpeed = value
        if SpeedEnabled then
            local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = value
            end
        end
    end
})

--------------------------------------------------------
-- üï≥Ô∏è Snap / ‡∏°‡∏∏‡∏î‡∏î‡∏¥‡∏ô (‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏•‡∏∂‡∏Å‡πÑ‡∏î‡πâ)
--------------------------------------------------------
local SnapEnabled = false
local SnapDepth = -10 -- ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
local RunService = game:GetService("RunService")
local LocalPlayer = game:GetService("Players").LocalPlayer

local function UpdateSnap()
    if not SnapEnabled then return end
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local root = char.HumanoidRootPart
        root.CFrame = CFrame.new(root.Position.X, root.Position.Y + SnapDepth, root.Position.Z)
    end
end

RunService.RenderStepped:Connect(function()
    if SnapEnabled then
        UpdateSnap()
    end
end)

-- Toggle Snap ‡πÉ‡∏ô Tab_Character
Tab_Character:Toggle({
    Title = "Snap ",
    Desc = "‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏°‡∏∏‡∏î‡∏î‡∏¥‡∏ô",
    Value = false,
    Callback = function(state)
        SnapEnabled = state
        print("Snap:", state and "ON" or "OFF")
    end
})

-- Slider ‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏•‡∏∂‡∏Å‡πÅ‡∏ö‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏•‡πÑ‡∏ó‡∏°‡πå
Tab_Character:Slider({
    Title = "Slider",
    Desc = "‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏•‡∏∂‡∏Å‡∏Ç‡∏≠‡∏áSnap ",
    Step = 1,
    Value = {Min = -50, Max = 0, Default = SnapDepth},
    Callback = function(value)
        SnapDepth = value
        print("Snap Depth:", SnapDepth)
    end
})
