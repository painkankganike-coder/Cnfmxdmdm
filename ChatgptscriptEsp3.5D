local ESPEnabled = false
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- ‡∏ó‡∏≥‡πÉ‡∏´‡πâ ESP ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ó‡∏∏‡∏Å‡πÄ‡∏´‡∏ï‡∏∏‡∏Å‡∏≤‡∏£‡∏ì‡πå (‡πÄ‡∏Å‡∏¥‡∏î‡πÉ‡∏´‡∏°‡πà / ‡∏Ñ‡∏ô‡πÄ‡∏Ç‡πâ‡∏≤‡πÉ‡∏´‡∏°‡πà)
local function setupPlayer(player)
    -- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡πÉ‡∏´‡∏°‡πà‡πÄ‡∏Å‡∏¥‡∏î
    player.CharacterAdded:Connect(function()
        if ESPEnabled then
            wait(1)
            createESP(player)
        end
    end)

    -- ‡∏™‡∏£‡πâ‡∏≤‡∏á ESP ‡πÉ‡∏´‡πâ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß
    if player.Character and ESPEnabled then
        createESP(player)
    end
end

local function toggleESP(state)
    ESPEnabled = state
    if state then
        print("ESP ‡∏™‡∏µ‡∏™‡πâ‡∏°‡πÄ‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß üüß")

        for _, p in pairs(Players:GetPlayers()) do
            if p ~= LocalPlayer then
                setupPlayer(p)
            end
        end

        -- ‡∏ñ‡πâ‡∏≤‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÉ‡∏´‡∏°‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡∏°‡∏≤
        Players.PlayerAdded:Connect(function(p)
            setupPlayer(p)
        end)

    else
        print("ESP ‡∏™‡∏µ‡∏™‡πâ‡∏°‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß ‚ùå")
        for _, p in pairs(Players:GetPlayers()) do
            removeESP(p)
        end
    end
end

